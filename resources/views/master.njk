<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <title>AdonisJs - Node.Js MVC Framework</title>

  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,300,600,700,900' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css"  crossorigin="anonymous">
  <link rel="stylesheet" href="/bootstrap.3.3.6.min.css"  crossorigin="anonymous">
  <link rel="icon" href="/assets/favicon.png" type="image/x-icon">

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">

</head>

<body id="app-layout">
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">

                <!-- Collapsed Hamburger -->
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#app-navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!-- Branding Image -->
                <a class="navbar-brand" href="/">
                    EQA on Adonis
                </a>
            </div>

            <div class="collapse navbar-collapse" id="app-navbar-collapse">
                <!-- Left Side Of Navbar -->
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/accreditation/">Accreditation</a></li>
                    <li><a href="/userManagement/">User Management</a></li>
                    <!--<li><a href="/toDo/">ToDo List</a></li>-->
                    <li><a href="/moduleManagement/">Module Installer</a></li>
                </ul>

                <!-- Right Side Of Navbar -->
                <ul class="nav navbar-nav navbar-right">
                    <!-- Authentication Links -->
                    {% if not currentUser %}
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Register</a></li>
                    {% else %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                {{ currentUser.display_name }} - 
                                {% if currentUser.position==null %}
                                {{ currentUser.role }} (Basic Role)
                                <span class="caret"></span>
                                {% else %}
                                {{ currentUser.position }} of {{ currentUser.organization }}
                                <span class="caret"></span>
                                {% endif %}
                            </a>

                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/pick_role"><i class="fa fa-btn fa-sign-out"></i>Change Role</a></li>
<!--                                <li><a href="#"><i class="fa fa-btn fa-sign-out"></i>Current Role: {{ currentUser.role }}</a></li>
                                <li><a href="#"><i class="fa fa-btn fa-sign-out"></i>Current Organization: {{ currentUser.organization }}</a></li>
-->                                <li><a href="#"><i class="fa fa-btn fa-sign-out"></i>Last Login: {{ currentUser.last_login }}</a></li>
                                <li><a href="#"><i class="fa fa-btn fa-sign-out"></i>Last IP: {{ currentUser.last_ip }}</a></li>
                                <li><a href="/logout"><i class="fa fa-btn fa-sign-out"></i>Logout</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    
                </ul>
            </div>
	
        </div>
    </nav>

    {% block content %}{% endblock %}
    

    <!-- JavaScript files -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="/confirmation/bootstrap-transition.js"></script>
    <script src="/confirmation/bootstrap-tooltip.js"></script>
    <script src="/confirmation/application.js"></script>
    <script src="/confirmation/bootstrap-confirmation.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.tree-toggle').click(function () {
                $(this).parent().children('ul.tree').toggle(200);
            });
        });
    </script>

    {% block js %}{% endblock %}
</body>
</html>
