{% extends 'master' %}


{% block content %}
<div class="body">
<div class="container">
    <div class="row">

	<div class="container-fluid">


<div class="well shallow-well">
	<span class="filter-link-list">
		Role Access Management of {{person.name}}
	</span>
</div>

<ul class="nav nav-tabs">
	<li><a href="/userManagement/person/{{person.id}}">
		<< Go Back</a>
	</li>
	<li class="active"><a href=#>
		Manage Position {{info.position}} of {{info.organization}}</a>
	</li>
</ul>
<br>


{%if error!=null %}
<div class="alert alert-danger">
  <div class="__banner">
    <div class="banner__inner">
      <h1>{{error}}</h1>
      <p> Something bad happened! <a href="{{link}}">Go Back</a> </p>
    </div>
  </div>
  </div>


{% else %}

<table id="tableView" class="table table-striped user-table">
	<thead><tr>
		<th>No</th>
		<th>Account</th>
		<th>canAccess?</th>
	</tr></thead>
	<tbody>
		{% set i=1 %}
		{% for user in users %}
		
		<tr>
			
			<td>{{i}}</td>
			<td>{{user.username}}</td>
			{% if user.id==null %}
				<td><a href="/userManagement/officerGrant/{{user.user_id}}/{{officer_id}}/{{person.id}}" class="label label-danger">Cannot access. Give permission?</a></td>
			{% else %}
				<td><a href="/userManagement/officerRevoke/{{user.id}}/{{officer_id}}/{{person.id}}" class="label label-success">Can access. Revoke permission?</a></td>
			{% endif %}
			
		</tr>
		{% set i=i+1 %}
		{% endfor %}
	</tbody>
	</table>

{% endif %}

</div></div></div></div>
{% endblock %}
